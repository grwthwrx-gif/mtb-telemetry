{
  "expo": {
    "name": "mtb-telemetry",
    "slug": "mtb-telemetry",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app_icon.png",
    "splash": {
      "image": "./assets/splash_dark.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B0C10",
      "dark": {
        "image": "./assets/splash_dark.png",
        "resizeMode": "contain",
        "backgroundColor": "#0B0C10"
      },
      "light": {
        "image": "./assets/splash_light.png",
        "resizeMode": "contain",
        "backgroundColor": "#F0F0F0"
      }
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/app_icon.png",
        "backgroundColor": "#0B0C10"
      }
    },
    "web": {
      "favicon": "./assets/app_icon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Orbitron-Regular.ttf",
            "./assets/fonts/Orbitron-Bold.ttf"
          ]
        }
      ]
    ]
  }
}
